<%- include('partials/header') %>

<div class="page-wrap">
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                <h1 class="text-center mb-4">Top N Words Finder</h1>

                <% if (error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>

                <form id="wordForm" class="bg-white p-4 rounded shadow needs-validation" action="/top-words" method="POST" novalidate>
                    <div class="mb-3">
                        <label for="urlInput" class="form-label">Web Page URL</label>
                        <input 
                            type="url" 
                            class="form-control" 
                            id="urlInput" 
                            name="url" 
                            placeholder="https://www.example.com"
                            value="<%= url %>"
                            required
                        >
                        <div class="invalid-feedback">
                            Please provide a valid URL.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="nInput" class="form-label">Number of Top Words (N)</label>
                        <input 
                            type="number" 
                            class="form-control" 
                            id="nInput" 
                            name="n" 
                            value="<%= n || 10 %>" 
                            min="1" 
                            required
                        >
                        <div class="invalid-feedback">
                            Please provide a valid number.
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Get Top Words</button>
                </form>

                <!-- Loading Spinner -->
                <div id="loadingSpinner" class="text-center my-4" style="display: none;">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Fetching and processing data...</p>
                </div>

                <% if (words && words.length > 0) { %>
                    <div class="mt-5">
                        <h2 class="mb-3">Top <%= words.length %> Words</h2>
                        <div class="table-responsive">
                            <table class="table table-hover table-bordered">
                                <thead class="table-dark">
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Word</th>
                                        <th scope="col">Frequency</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% words.forEach((word, index) => { %>
                                        <tr>
                                            <th scope="row"><%= index + 1 %></th>
                                            <td><%= word.word %></td>
                                            <td><%= word.freq %></td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
